<SelectableLabel>:
    canvas.before:
        Color:
            rgb: (228/255,228/255,228/255) if self.selected else (240/255,240/255,240/255)
        Rectangle:
            pos: self.pos
            size: self.size
    color: (0, 0, 0, 1) if self.selected else (0, 0, 0, 1)

<PersonsScreen>:
    name: "persons"
    on_pre_enter:
        root.refresh()

    #frame surrounding the workspace
    BoxLayout:
        orientation: 'vertical'
        padding:30,0,30,30
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size

        #mode title
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:40
            Label:
                size_hint_x: None
                width:25
            Label:
                text: "Persons"
                font_name: font_regular
                font_size: '18sp'
                color: header_text_color
                size_hint_y: None
                size_hint_x: None
                height:40
                halign:"left"
                valign:"center"

        BoxLayout:
            padding:20
            orientation: 'horizontal'

            #workspace background
            canvas.before:
                Color:
                    rgb: workspace_bck_color
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'
                    BoxLayout:
                        orientation: 'vertical'
                        canvas.before:
                            Color:
                                rgb: (240/255,240/255,240/255)
                            Rectangle:
                                pos: self.pos
                                size: self.size

                        TextInput:
                            size_hint_y: 0.1
                            id: search_input
                            font_size: self.height/2
                            multiline:False
                            hint_text:"Search..."
                            color: normal_text_color
                            font_name: font_light
                            valign:'middle'
                            halign:'left'
                            text_size: self.size
                            on_text:
                                if self.text: root.presenter.search_person(self.text)
                                else: root.presenter.search_person(self.text)

                        PersonRecycleView:
                            id: rv
                            viewclass: 'SelectableLabel'
                            SelectableRecycleBoxLayout:
                                id:rv_box
                                default_size: None, dp(48)
                                default_size_hint: 1, None
                                size_hint_y: None
                                size_hint_x:1
                                height: self.minimum_height
                                orientation: 'vertical'
                                multiselect: False
                                touch_multiselect: False

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.12
                        padding: 0,10,0,0

                        RoundButton:
                            id: add_btn
                            text:"Add person"
                            on_release:
                                root.add_person_action()

                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: 0.12
                        padding: 0,10,0,0


                        RoundButton:
                            id: edit_btn
                            text:"Edit"
                            on_release:
                                root.edit_person()

                        Label:
                            size_hint_x: 0.1

                        RoundButton:
                            id: delete_btn
                            text:"Delete"
                            on_release:
                                root.delete_person()

                BoxLayout:
                    padding:20,0,0,0
                    size_hint_x:2
                    pos_hint: {'top': 1}
                    orientation:'vertical'

                    BoxLayout:
                        id: photo_preview_box
                        orientation:'vertical'
                        size_hint_y: 2

                        Label:
                            size_hint_y:None
                            height:10

                        ImageButton:
                            anchor_x: 'center'
                            anchor_y: 'center'
                            id:preview_photo
                            source: 'assets/images/default-user-original.png'
                            allow_stretch: True
                            #size_hint_y:None
                            keep_ratio:True
                            on_press: root.popup_photo()
                            #height:50
                        Label:
                            id:preview_photo_name
                            size_hint_y:None
                            height:30
                            text:'1.jpg (1/24)'
                            color: normal_text_color
                            font_name: font_light
                            text_size: self.size
                            halign:'center'
                            valign:'center'
                            center_y: preview_photo.center_y-preview_photo.height/2 + 35
                            center_x: preview_photo.center_x
                            font_size: '13sp'


                        BoxLayout: #next/previous photo button box
                            orientation: 'horizontal'
                            size_hint_y:None
                            height:40
                            BoxLayout: #ok and nok results box
                                orientation: 'vertical'

                            RoundButton:
                                id: previous_photo_btn
                                text:"<"
                                size_hint_x:.25
                                size_hint_y:None
                                height:30
                                pos_hint: {'top': 1}
                                on_release:
                                    root.previous_photo()
                            Label:
                                size_hint_x:None
                                width:10
                            RoundButton:
                                id: next_photo_btn
                                text:">"
                                size_hint_x:.25
                                size_hint_y:None
                                height:30
                                pos_hint: {'top': 1}
                                on_release:
                                    root.next_photo()
                            Label:


                    BoxLayout:
                        #vertical layout - contains model info headers
                        id: infos
                        orientation:'vertical'
                        size_hint_y: 1

                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:"Name:  "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            Label:
                                id:name
                                #size_hint_y:None
                                #height:30
                                text:'Name'
                                font_name: font_light
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color


                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:"Age:  "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light


                            Label:
                                id:age
                                text:'Age'
                                font_name: font_light
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color

                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:"Gender:  "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            Label:
                                id:gender
                                text:'Gender'
                                font_name: font_light
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color

                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:"Nationality:  "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            Label:
                                id:nationality
                                text:'Nationality'
                                font_name: font_light
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color


                        BoxLayout:
                            orientation:'horizontal'
                            size_hint_y: 2
                            Label:
                                text:"Details:  "
                                multiline:True
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            ScrollView:
                                Label:
                                    id:details
                                    height: self.texture_size[1]
                                    width: self.texture_size[0]
                                    text:'Details'
                                    font_name: font_light
                                    text_size: self.width, None
                                    size_hint: (1,None)
                                    valign:'middle'
                                    halign:'left'
                                    color: normal_text_color

                        BoxLayout:
                            orientation:'horizontal'
                            Label:
                                text:"Contact phone:  "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            Label:
                                id:contact_phone
                                text:'Contact phone'
                                font_name: font_light
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color
