<SelectableLabel_create>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgb: (228/255,228/255,228/255) if self.selected else (240/255,240/255,240/255)
        Rectangle:
            pos: self.pos
            size: self.size
    color: (0, 0, 0, 1) if self.selected else (0, 0, 0, 1)


<LearningCreate>:
    name:"learning_create"

    on_pre_enter:
        root.clear_inputs()
        root.refresh()

    #frame surrounding the workspace
    BoxLayout:
        orientation: 'vertical'
        padding:30,0,30,30
        canvas.before:
            Color:
                rgb: bck_color
            Rectangle:
                pos: self.pos
                size: self.size
        #mode title
        BoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:40
            Label:
                size_hint_x: None
                width:50
            Label:
                text: "Creating new model"
                font_name: font_regular
                font_size: '18sp'
                color: header_text_color
                size_hint_y: None
                size_hint_x: None
                height:40
                halign:"left"
                valign:"center"


        BoxLayout:
            padding:20
            orientation: 'vertical'
            #workspace background
            canvas.before:
                Color:
                    rgb: workspace_bck_color
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                #main horizontal layout - put new elements here
                id: content2
                orientation: 'horizontal'
                size_hint_y:3
                size_hint_x: 1


                BoxLayout:
                    orientation:'vertical'

                    BoxLayout:
                        padding:0,0,10,0
                        #vertical layout - contains model info headers
                        id: learning_infos
                        orientation:'vertical'
                        pos_hint: {'top': 1}


                        BoxLayout:
                            orientation:'horizontal'
                            padding: 20,0,0,0
                            size_hint_y: None
                            height: 20
                            Label:
                                text:"Information"
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: header_text_color
                                font_name: font_regular
                        Label:
                            size_hint_y: None
                            height: 10
                        BoxLayout:
                            orientation:'horizontal'
                            size_hint_x:1
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Model name: "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light
                            CustomInput:
                                id:create_model_name
                                multiline: False
                                hint_text:"Model name"
                                size_hint_x:2
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color
                                font_name: font_light
                        Label:
                            size_hint_y: None
                            height: 5
                        BoxLayout:
                            orientation:'horizontal'
                            size_hint_x:1
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Author: "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            CustomInput:
                                id:create_author
                                multiline: False
                                hint_text:"Unknown"
                                size_hint_x:2
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: normal_text_color
                                font_name: font_light
                        Label:
                            size_hint_y: None
                            height: 5
                        BoxLayout:
                            orientation:'horizontal'
                            size_hint_x: 1
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Description: "
                                text_size: self.size
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light

                            CustomInput:
                                id:create_comment
                                multiline:False
                                hint_text:"Type your comment here"
                                text_size: self.size
                                size_hint: (2,1)
                                halign:'left'
                                color: normal_text_color
                                font_name: font_light

                        Label:
                            size_hint_y: None
                            height: 20

                        BoxLayout:
                            orientation:'horizontal'
                            size_hint_y: None
                            height: 30
                            padding: 20,0,0,0
                            Label:
                                text:"Parameters"
                                text_size: self.size
                                valign:'middle'
                                halign:'left'
                                color: header_text_color
                                font_name: font_regular
                        Label:
                            size_hint_y: None
                            height: 5
                        BoxLayout:
                            orientation:'horizontal'
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Algorithm: "
                                text_size: self.size
                                size_hint_x: 1
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_x: 2
                                Spinner:
                                    id:spinner_algorithm
                                    text:"KNN Classification"
                                    text_size : self.width, None
                                    halign:'center'
                                    color: normal_text_color
                                    font_name: font_light
                                    background_normal:'assets/images/light_grey.jpg'
                                    background_down: 'assets/images/pressed.jpg'
                                    values: root.get_algorithms()
                                    on_text: root.on_algorithm_selected(spinner_algorithm.text)
                                    option_cls: Factory.get("MySpinnerOption")
                        Label:
                            size_hint_y: None
                            height: 5

                        BoxLayout:
                            orientation:'horizontal'
                            id: weights_box
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Weight: "
                                text_size: self.size
                                size_hint_x: 1
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_x: 2
                                Spinner:
                                    id:spinner_weights
                                    text:"distance"
                                    text_size : self.width, None
                                    halign:'center'
                                    color: normal_text_color
                                    font_name: font_light
                                    background_normal:'assets/images/light_grey.jpg'
                                    background_down: 'assets/images/pressed.jpg'
                                    values: root.get_weights()
                                    on_text: root.on_weight_selected(spinner_weights.text)
                                    option_cls: Factory.get("MySpinnerOption")

                        BoxLayout:
                            orientation:'horizontal'
                            id: gamma_box
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Gamma: "
                                text_size: self.size
                                size_hint_x: 1
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light
                            BoxLayout:
                                orientation: 'horizontal'
                                size_hint_x: 2
                                Spinner:
                                    id:spinner_gamma
                                    text:"scale"
                                    text_size : self.width, None
                                    halign:'center'
                                    color: normal_text_color
                                    font_name: font_light
                                    background_normal:'assets/images/light_grey.jpg'
                                    background_down: 'assets/images/pressed.jpg'
                                    values: root.get_gammas()
                                    on_text: root.on_gamma_selected(spinner_gamma.text)
                                    option_cls: Factory.get("MySpinnerOption")
                        Label:
                            size_hint_y: None
                            height: 5
                        BoxLayout:
                            orientation:'horizontal'
                            id: neighbor_box
                            size_hint_x:1
                            size_hint_y: None
                            height: 30
                            Label:
                                text:"Neighbors: "
                                text_size: self.size
                                size_hint_x:1
                                valign:'middle'
                                halign:'right'
                                color: header_text_color
                                font_name: font_light
                            BoxLayout:
                                orientation:'horizontal'
                                size_hint_x:2
                                CustomInput:
                                    id:create_neighbor_num
                                    multiline:False
                                    input_filter: 'int'
                                    hint_text:"auto"
                                    text_size: self.size
                                    size_hint_x:None
                                    width: 50
                                    valign:'middle'
                                    halign:'left'
                                    color: normal_text_color
                                    font_name: font_light
                                    disabled:True
                                    on_text: root.on_neighbor_input_changed(self.text)
                                CustomCheckbox:
                                    id: neighbor_checkbox
                                    size_hint_x:None
                                    width:40
                                    on_active: root.on_neighbor_checkbox_changed(self.active)
                        Label:


                Label:
                    size_hint_x:None
                    width:20
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        size_hint_x: 0.2
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x:0.8
                        padding: 0,0,20,0
                        Label:
                            text:"Persons with photos (for training)"
                            text_size: self.size
                            valign:'middle'
                            halign:'center'
                            color: header_text_color
                            font_name: font_regular
                            size_hint_y: None
                            height: 20
                        Label:
                            size_hint_y: None
                            height: 5
                        BoxLayout:
                            orientation: 'vertical'
                            canvas.before:
                                Color:
                                    rgb: (240/255,240/255,240/255)
                                Rectangle:
                                    pos: self.pos
                                    size: self.size
                            TextInput:
                                size_hint_y: None
                                height: 30
                                id: search_input
                                font_size: self.height/2
                                multiline:False
                                hint_text:"Search..."
                                color: normal_text_color
                                font_name: font_light
                                valign:'middle'
                                halign:'left'
                                text_size: self.size
                                on_text:
                                    if self.text: root.search_persons(self.text)
                                    else: root.search_persons("")

                            RecycleView:
                                id: rv
                                viewclass: 'SelectableLabel_create'
                                SelectableRecycleBoxLayout_create:
                                    id:rv_box
                                    data: root.search_persons("")
                                    default_size: None, dp(28)
                                    default_size_hint: 1, None
                                    size_hint_y: None
                                    size_hint_x:1
                                    height: self.minimum_height
                                    orientation: 'vertical'
                                    multiselect: False
                                    touch_multiselect: False

            Label: #space between infos and buttons
                size_hint_y:0.4

            BoxLayout:
                orientation:'vertical'
                size_hint_y:None
                height: 100
                BoxLayout:
                    orientation:'horizontal'
                    Label:
                        size_hint_x:1.4
                    RoundButton:
                        id:begin_learning_button
                        size_hint_y:None
                        height:70
                        text:"Train model"
                        color: normal_text_color
                        font_name: font_light
                        font_size: '20sp'
                        on_release:
                            root.begin_training()
                    Label:
                        size_hint_x:1.4
                Label:
                    id: learning_results
                    text:"Learning time: N/A, Accuracy: N/A"
                    size_hint_y:0.3
                    height:0
                    font_name: font_light
                    font_size: '13sp'
                    color: normal_text_color
                    opacity: 0
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        size_hint_x: 1
                    RoundButton:
                        id: cancel_btn
                        size_hint_x: 0.5
                        size_hint_y: None
                        height: 40
                        text: "Back"
                        on_release:
                            root.go_back_to_learning()
                    Label:
                        size_hint_x: 1