#top naviation bar style
<TabBar@GridLayout>:
    size: root.width, self.height
    size_hint_y:None
    height: 55
    cols:1

#custom button style
<CustButton@Button>
    font_name: font_light
    color: normal_text_color
    background_normal:''
    background_down: 'assets/images/pressed.jpg'

<RoundButton>
    background_color:0,0,0,0
    font_name: font_light
    color: normal_text_color
    disabled_color: normal_text_color
    canvas.before:
        Color:
            rgb:(.94,.94,.94,1) if self.state == 'normal' else (.9, .9, .9, 1)
        RoundedRectangle:
            size: (self.size)
            pos: (self.pos)
            radius: [10, ]

#custom text input
<CustomInput@TextInput>:
    write_tab: False
    font_name: font_light
    background_normal:'assets/images/light_grey.jpg'
    background_disabled_normal:'assets/images/pressed.jpg'
    text_size: self.size
    valign:'bottom'

    canvas.before:
        Color:
            rgb: normal_text_color if self.text != '' and self.disabled == False else (.6,.6,.6,1)
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height-2)

<MySpinnerOption@SpinnerOption>: #spinner is a drop down list for choosing models
    background_normal:'assets/images/pressed.jpg'
    background_down: 'assets/images/list_pressed.jpg'
    color: normal_text_color
    font_name: font_light

<CustomCheckbox@CheckBox>:
    background_checkbox_normal: 'assets/images/checkbox_off.png'
    background_checkbox_down: 'assets/images/checkbox_on.png'

<CustomRadioButtonSec@CustomRadioButtonStatic>:
    background_radio_normal: 'assets/images/checkbox_off.png'
    background_radio_down: 'assets/images/checkbox_on.png'

<CustomRadioButtonSet@CustomRadioButtonToggle>:
    background_radio_normal: 'assets/images/checkbox_off.png'
    background_radio_down: 'assets/images/checkbox_on.png'


<ScrollableLabel@ScrollView>:
    Label:
        size_hint_y: None
        height: self.texture_size[1]
        text_size: self.width, None

<ImageButton@ButtonBehavior+Image>:


